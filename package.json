{
  "name": "actionsflow-event-driven-automation-github-template",
  "private": true,
  "description": "A professional starter template for building scalable, event-driven automation workflows with ActionsFlow on GitHub Actions, featuring ready-made RSS, webhook, and custom triggers.",
  "version": "1.0.0",
  "author": "chirag127",
  "type": "module",
  "devDependencies": {
    "actionsflow": "^1.12.0",
    "typescript": "^5.0.0",
    "vitest": "^0.33.0",
    "@vitest/coverage-v8": "^0.33.0",
    "playwright": "^1.36.0",
    "@biomejs/biome": "^1.0.0",
    "cross-env": "^7.0.3"
  },
  "keywords": [
    "actionsflow",
    "workflow",
    "automation",
    "event-driven",
    "github-actions"
  ],
  "license": "CC-BY-NC-4.0",
  "scripts": {
    "build": "tsc",
    "start": "actionsflow start",
    "watch": "actionsflow start -w",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test": "cross-env NODE_ENV=test vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chirag127/ActionsFlow-Event-Driven-Automation-GitHub-Template"
  },
  "bugs": {
    "url": "https://github.com/chirag127/ActionsFlow-Event-Driven-Automation-GitHub-Template/issues"
  }
}
